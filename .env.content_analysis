# 智能内容分析系统环境变量配置

# OpenAI API配置 (必需)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API配置 (可选)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM配置文件路径 (可选)
LLM_CONFIG_PATH=config/llm_config.json

# 并发控制 (可选)
MAX_CONCURRENT_REQUESTS=5
DEFAULT_MAX_TOKENS=4000

# 成本控制 (可选)
DAILY_BUDGET=10.0
COST_ALERT_THRESHOLD=0.8

# 日志级别 (可选)
LOG_LEVEL=INFO

# 输出目录 (可选)
OUTPUT_DIR=output
